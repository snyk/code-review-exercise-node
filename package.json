{
  "name": "code-review-exercise-node",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon --watch src --ext .ts --exec \"npx tsx ./src/index.ts\"",
    "build": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --detectOpenHandles --runInBand --selectProjects Unit Integration EndToEnd",
    "test:unit": "jest --detectOpenHandles --runInBand --selectProjects Unit",
    "test:integration": "jest --detectOpenHandles --runInBand --selectProjects Integration",
    "test:e2e": "jest --detectOpenHandles --runInBand --selectProjects EndToEnd"
  },
  "engines": {
    "node": "^22.12",
    "npm": "^10.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/semver": "^7.5.8",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "commander": "^13.1.0",
    "express": "^4.21.2",
    "pino": "^9.6.0",
    "semver": "^7.6.3"
  }
}
